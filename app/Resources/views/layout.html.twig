<html>
	<head>
		<title>{% block title %}Game2Share{% endblock %}</title>
		{% block stylesheets %}
			<link rel="stylesheet" type="text/css" href="{{ asset('css/G2s.css') }}">
			<link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}">
		{% endblock %}
	</head>
	<body>
		{% block menu %}
			<!-- Fixed navbar -->
		    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
		      <div class="container">
		        <div class="navbar-header">
		          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
		            <span class="sr-only">Toggle navigation</span>
		            <span class="icon-bar"></span>
		            <span class="icon-bar"></span>
		            <span class="icon-bar"></span>
		          </button>
		          <a class="navbar-brand" href="{{ path('g2s_app_homepage') }}">Game2Share</a>
		        </div>
		        <div class="navbar-collapse collapse">
		          <ul class="nav navbar-nav">
		            <li class="active"><a href="{{ path('g2s_app_homepage') }}">Accueil</a></li>
		            <li><a href="{{ path('g2s_app_apps_show_all') }}">Toutes les Applications</a></li>
		            <li class="dropdown">
		              <a class="dropdown-toggle" data-toggle="dropdown">Par Plateformes<b class="caret"></b></a>
		              <ul class="dropdown-menu">
						{{ render(controller('G2sAppBundle:Platforms:listHeader')) }}
		              </ul>
					</li>
		            <li class="dropdown">
		              <a class="dropdown-toggle" data-toggle="dropdown">Par Tags<b class="caret"></b></a>
		              <ul class="dropdown-menu">
						{{ render(controller('G2sAppBundle:Tags:listHeader')) }}
		              </ul>
		            </li>
		            </ul>

		            <form class="navbar-form navbar-right" role="form" method="post" action="{{ path('g2s_app_apps_selection') }}">
			            <div class="input-group" style="max-width: 300px;">
			                <input type="text" placeholder="Chercher" class="form-control" name="search">
							<span class="input-group-btn">
								<button type="submit" class="btn btn-success">Chercher <span class="glyphicon glyphicon-search"></span></button>
							</span>
			            </div>
			        </form>
						
					
		          
		        </div><!--/.nav-collapse -->
		      </div>
		    </div>
		{% endblock %}

		<div class="container">
			{% block body %}
		
			{% endblock %}


			<div class="row">
				<div class="col-sm-12">
					<div class="navbar">
						<hr />
						<a href="{{ path('g2s_app_about') }}">A propos</a>
						<a href="{{ path('g2s_app_contact') }}">Contacts</a>
					</div>
				</div>
			</div>
		</div>

		{% block javascripts %}
			<script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>
			<script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>
		{% endblock %}
	</body>
</html>
