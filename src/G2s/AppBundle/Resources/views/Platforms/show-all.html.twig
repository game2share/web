{% extends "::layout.html.twig" %}

{% block title %}
	{{ parent() }} - Home
{% endblock %}

{% block body %}
	{{ parent() }}

	<h1>Applications For Platform : {{ platformName }}</h1>

	{% for appInfo in appInfos %}

